                <a class=" " href="#">Men&#250;</a>
                <a class="" href="/contacto/mensaje">Contactenos</a>
                <a class="" href="/contacto/opiniones">Opiniones</a>
                {{#if cerrarSesion}}
                <div class="btn-perfil-usuaro header__pagina_actual">
                    <a {{!-- href="#" --}} id="btn-perfil-usuaro-responsive" class="btn-perfil-usuaro-responsive">
                        <span class="btn-perfil-usuaro-responsive">{{nombreUsuario}}</span>
                        <i class="fas fa-caret-right btn-perfil-usuaro-responsive"></i>
                    </a>

                    <div class="categorias {{!-- animate__animated animate__backInLeft --}}" id="categoria-perfil-responsive">
                        <a class="" data-categoria="perfil" href="/mi-perfil">

                            {{#if usuario.imagen}}
                            <div class="circular ">
                                <img src="/uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
                            </div>
                            {{else}}
                            <div class="circular ">
                                <i class="fas fa-user-circle"></i>
                            </div>
                            {{/if}} {{!-- --}}
                            <span class=" ">Mi perfil</span>
