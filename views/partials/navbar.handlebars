        <a class="header__pagina_actual" href="/contacto/opiniones">Opiniones</a>
        {{#if cerrarSesion}}
        <div class="btn-perfil-usuaro header__pagina_actual">
            <a id="btn-perfil-usuaro"{{!--  href="#" --}}>
                <span id="btn-perfil-usuaro-span">{{nombreUsuario}}</span>
                <i id="btn-perfil-usuaro-icono" class="fas fa-caret-down"></i>
            </a>

            <div class="categorias" id="categoria-perfil">
                <a class="dropdown-item" data-categoria="perfil" href="/mi-perfil">
                    {{#if usuario.imagen}}
                    <div class="circular">
                        <img src="/uploads/perfiles/{{usuario.imagen}}" class="admin-perfil">
                    </div>
                    {{else}}
                    <div class="circular">
                        <i class="fas fa-user-circle"></i>
                    </div>
                    {{/if}}{{!-- --}}
                    <span>Mi perfil</span>
                </a>
                <a class="dropdown-item" data-categoria="perfil" href="/cerrar-sesion">Cerrar sesión</a>
            </div>
        </div>



        {{else}}
        <a class="header__pagina_actual" href="/iniciar-sesion">Iniciar sesión</a>
        {{/if}}

    </nav>
